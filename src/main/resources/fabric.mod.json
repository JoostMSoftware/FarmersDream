{
  "schemaVersion": 1,
  "id": "farmersdream",
  "version": "${version}",

  "name": "Farmer's Dream",
  "description": "An addon for Farmers Delight to enhance your farming needs",
  "authors": [
    "JoostMSoftware"
  ],
  "contact": {
    "homepage": "https://fabricmc.net/",
    "sources": "https://github.com/FabricMC/fabric-example-mod"
  },

  "license": "MIT License",
  "icon": "assets/farmersdream/icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "io.github.joostmsoftware.farmersdream.FarmersDream"
    ],
    "client": [
      "io.github.joostmsoftware.farmersdream.client.FarmersDreamClient"
    ],
    "fabric-datagen": [
      "io.github.joostmsoftware.farmersdream.initialization.FarmersDreamDataGen"
    ],
    "emi": [
      "io.github.joostmsoftware.farmersdream.initialization.plugins.emi.FarmersDreamEmiPlugin"
    ]
  },
  "mixins": [
    "farmersdream.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.14.9",
    "fabric-api": "*",
    "minecraft": "~1.19",
    "java": ">=17",
    "farmersdelight": "*"
  },
  "custom": {
    "modmenu": {
      "parent": "farmersdelight"
    }
  }
}
